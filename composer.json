{
    "name": "rakibhstu/number-to-bangla",
    "description": "A Laravel package for converting English numbers into Bangla digits, Bangla words, Bangla month names, and Bangla money format with an easy-to-use API.",
    "keywords": [
        "laravel",
        "laravel-package",
        "php",
        "bangla",
        "bengali",
        "number-to-bangla",
        "number-to-word",
        "bangla-number",
        "bangla-money",
        "bangla-month-name"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Rakibul Islam",
            "email": "rakib1708@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0|^8.1|^8.2|^8.3|^8.4",
        "illuminate/support": "^9.0|^10.0|^11.0|^12.0",
        "nesbot/carbon": "^2.72|^3.11"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0|^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^9.5|^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Rakibhstu\\Banglanumber\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rakibhstu\\Banglanumber\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Rakibhstu\\Banglanumber\\NumberToBanglaServiceProvider"
            ],
            "aliases": {
                "NumberToBangla": "Rakibhstu\\Banglanumber\\NumberToBangla"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
